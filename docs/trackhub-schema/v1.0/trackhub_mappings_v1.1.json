        "hub": {
          "type": "object",
          "properties": {
            "name": {
              "type": "text",
              "index": true
            },
            "url": {
              "type": "keyword",
              "index": false
            }
          }
        },
        "species": {
          "type": "object",
          "properties": {
            "scientific_name": {
              "type": "keyword",
              "index": true
            }
          }
        },
        "assembly": {
          "type": "object",
          "properties": {
            "accession": {
              "type": "keyword",
              "index": true
            },
            "name": {
              "type": "keyword",
              "index": true
