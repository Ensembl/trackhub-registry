 {
  "_comment": "This is trackhub_mappings_v1.json adapted for Elasticsearch v6.3",
  "settings": {
    "number_of_shards": 3,
    "number_of_replicas": 2,
    "analysis": {
      "analyzer": {
        "case_insensitive_keywords": {
          "tokenizer": "keyword",
          "filter": "lowercase"
        }
      }
    }
  },
  "aliases": {
    "live_trackhubs": {}
  },
  "mappings": {
    "trackdb": {
      "date_detection": false,
      "properties": {
        "owner": {
          "type": "keyword",
          "index": true
        },
        "public": {
          "type": "boolean",
          "index": true
        },
        "created": {
          "type": "date",
          "index": false
        },
        "updated": {
          "type": "date",
          "index": false
        },
        "status": {
          "type": "object",
          "enabled": false
        },
        "hub": {
          "type": "object",
          "properties": {
            "name": {
              "type": "keyword",
              "index": true,
              "fields": {
                "lowercase": {
                  "type": "text",
                  "analyzer": "case_insensitive_keywords"
                }
              }
            },
            "url": {
              "type": "keyword",
              "index": true
            }
          }
        },
        "species": {
          "type": "object",
          "properties": {
            "scientific_name": {
              "type": "keyword",
              "index": true,
              "fields": {
                "lowercase": {
                  "type": "text",
                  "analyzer": "case_insensitive_keywords"
                }
              }
            },
            "tax_id": {
              "type": "integer"
            },
            "common_name": {
              "type": "text"
            }
          }
        },
        "assembly": {
          "type": "object",
          "properties": {
            "accession": {
              "type": "keyword",
              "index": true
            },
            "name": {
              "type": "keyword",
              "index": true
            },
            "synonyms": {
              "type": "keyword",
              "index": true
            }            
          }
        },
        "configuration": {
          "type": "object",
          "enabled": false
        },
        "type": {
          "type": "keyword"
        },
        "data": []
      }
    }
  }
}